@using VehicleDiary.Web.ViewModels
@model DBDiagnosticVehicleModelVM

<div class="container py-4">
    <!-- Header with button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="diagnostic-history-title">
            <i class="fas fa-stethoscope me-2"></i>Diagnostic History
        </h2>
        <a asp-controller="DiagnosticVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId" class="btn btn-primary btn-add-diagnostic">
            <i class="fas fa-plus-circle me-2"></i>Add New Diagnostic
        </a>
    </div>

    <!-- Filter Section -->
    <div class="filter-card mb-4">
        <div class="filter-header" id="filterToggle">
            <h3 class="filter-title">
                <i class="fas fa-filter me-2"></i>Filters
            </h3>
            <span class="filter-toggle-icon">
                <i class="fas fa-chevron-down"></i>
            </span>
        </div>
        <div class="filter-content" id="filterContent" style="display: none;">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select class="form-control filter-select" id="filterCategory">
                        <option value="">All Categories</option>
                        <option value="Diagnostics" selected>Vehicle Diagnostics</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Diagnostic Type</label>
                    <select class="form-control filter-select" id="filterType">
                        <option value="">All Types</option>
                        <option value="Coding">Coding</option>
                        <option value="Error Diagnostics">Error Diagnostics</option>
                        <option value="Software Update">Software Update</option>
                        <option value="Tuning">Tuning</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <div class="input-group">
                        <input type="date" class="form-control filter-date" id="filterDateFrom" placeholder="From">
                        <input type="date" class="form-control filter-date" id="filterDateTo" placeholder="To">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Price Range</label>
                    <div class="d-flex align-items-center">
                        <input type="number" class="form-control filter-price" id="filterPriceMin" placeholder="Min" step="0.01">
                        <span class="mx-2">-</span>
                        <input type="number" class="form-control filter-price" id="filterPriceMax" placeholder="Max" step="0.01">
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-secondary" id="resetFilters">
                            <i class="fas fa-redo me-1"></i>Reset Filters
                        </button>
                        <button class="btn btn-primary" id="applyFilters">
                            <i class="fas fa-check me-1"></i>Apply Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    <div class="results-count mb-3" id="resultsCount">
        Showing <span id="filteredCount">@Model.RepairViews?.Count() ?? 0</span> diagnostic records
    </div>

    <!-- Diagnostic History -->
    @if (Model.RepairViews != null && Model.RepairViews.Any())
    {
        <div class="diagnostic-cards-container" id="diagnosticCardsContainer">
            @foreach (var diagnostic in Model.RepairViews)
            {
                <div class="diagnostic-card" id="diagnostic-@diagnostic.ID"
                     data-category="@diagnostic.DiagnosticVCategory"
                     data-type="@diagnostic.DiagnosticVType"
                     data-date="@diagnostic.DiagnosticVWhen.ToString("yyyy-MM-dd")"
                     data-price="@(diagnostic.DiagnosticVPrice ?? 0)"
                     data-error-type="@diagnostic.DiagnosticVErrorType">

                    <div class="diagnostic-card-header">
                        <div class="diagnostic-category-badge">
                            @diagnostic.DiagnosticVCategory
                        </div>
                        <span class="diagnostic-date">@diagnostic.DiagnosticVWhen.ToString("d MMM yyyy")</span>
                    </div>

                    <div class="diagnostic-card-body">
                        <div class="diagnostic-type">
                            <i class="fas fa-tools me-2"></i>@diagnostic.DiagnosticVType
                        </div>

                        <h4 class="diagnostic-name">@diagnostic.DiagnosticVName</h4>

                        <!-- Diagnostic Tool -->
                        @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVDiagnosticType))
                        {
                            <div class="diagnostic-detail-item">
                                <i class="fas fa-laptop-medical me-2"></i>Tool: @diagnostic.DiagnosticVDiagnosticType
                            </div>
                        }

                        <!-- Error Type (only for Error Diagnostics) -->
                        @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorType))
                        {
                            <div class="diagnostic-detail-item">
                                <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Error Type: @diagnostic.DiagnosticVErrorType
                            </div>
                        }

                        <!-- Error Code -->
                        @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorCode))
                        {
                            <div class="diagnostic-detail-item">
                                <i class="fas fa-barcode me-2"></i>Error Code: <span class="error-code-badge">@diagnostic.DiagnosticVErrorCode</span>
                            </div>
                        }

                        <!-- Error Description -->
                        @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorDis))
                        {
                            <div class="diagnostic-error-description">
                                <i class="fas fa-comment-dots me-2"></i>Description: @diagnostic.DiagnosticVErrorDis
                            </div>
                        }

                        <!-- Mileage -->
                        @if (diagnostic.DiagnosticVMileage.HasValue && diagnostic.DiagnosticVMileage > 0)
                        {
                            <div class="diagnostic-detail-item">
                                <i class="fas fa-tachometer-alt me-2"></i>Mileage: @diagnostic.DiagnosticVMileage km
                            </div>
                        }

                        <!-- Technician -->
                        @if (!string.IsNullOrEmpty(diagnostic.UpgradeVTechnician))
                        {
                            <div class="diagnostic-detail-item">
                                <i class="fas fa-user-md me-2"></i>Technician: @diagnostic.UpgradeVTechnician
                            </div>
                        }

                        <!-- File Download -->
                        @if (!string.IsNullOrEmpty(diagnostic.FileName))
                        {
                            <div class="diagnostic-file-download">
                                <i class="fas fa-paperclip me-2"></i>
                                <a href="@Url.Action("Download", "DiagnosticVehicle", new { id = diagnostic.ID })" class="file-download-link" target="_blank">
                                    @diagnostic.FileName
                                </a>
                            </div>
                        }

                        <!-- Notes -->
                        @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVNotes))
                        {
                            <div class="diagnostic-notes">
                                <i class="fas fa-sticky-note me-2"></i>@diagnostic.DiagnosticVNotes
                            </div>
                        }
                    </div>

                    <div class="diagnostic-card-footer">
                        @if (diagnostic.DiagnosticVPrice.HasValue)
                        {
                            <div class="diagnostic-price">
                                ₱@diagnostic.DiagnosticVPrice.Value.ToString("N2")
                            </div>
                        }
                        else
                        {
                            <div class="diagnostic-price no-price">
                                No Cost
                            </div>
                        }

                        <div class="diagnostic-actions">
                            <button onclick="editDiagnostic('@diagnostic.ID')" class="btn-edit-diagnostic" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button onclick="deleteDiagnostic('@diagnostic.ID')" class="btn-delete-diagnostic" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-diagnostics-card">
            <div class="no-diagnostics-icon">
                <i class="fas fa-stethoscope"></i>
            </div>
            <h3>No Diagnostic Records</h3>
            <p>No diagnostic records available for this vehicle.</p>
            <a asp-controller="DiagnosticVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId" class="btn btn-primary btn-add-first-diagnostic">
                <i class="fas fa-plus-circle me-2"></i>Add First Diagnostic
            </a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Delete diagnostic record
        function deleteDiagnostic(id) {
            if (confirm("Are you sure you want to delete this diagnostic record?")) {
                $.ajax({
                    url: "@Url.Action("Delete", "DiagnosticVehicle")/" + id,
                    type: "DELETE",
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        $("#diagnostic-" + id).fadeOut(300, function() {
                            $(this).remove();
                            updateResultsCount();
                            // If no diagnostics left, show the empty state
                            if ($(".diagnostic-card").length === 0) {
                                location.reload();
                            }
                        });
                        showToast('Diagnostic record deleted successfully', 'success');
                    },
                    error: function (err) {
                        console.error(err);
                        showToast('An error occurred while deleting the diagnostic record', 'error');
                    }
                });
            }
        }

        // Edit diagnostic record (redirect to edit page)
        function editDiagnostic(id) {
            window.location.href = '@Url.Action("Edit", "DiagnosticVehicle")/' + id;
        }

        // Filter functionality
        $(document).ready(function() {
            // Toggle filter section
            $('#filterToggle').click(function() {
                $('#filterContent').slideToggle(300);
                $('.filter-toggle-icon i').toggleClass('fa-chevron-down fa-chevron-up');
            });

            // Apply filters
            $('#applyFilters').click(function() {
                applyFilters();
            });

            // Reset filters
            $('#resetFilters').click(function() {
                $('#filterCategory').val('Diagnostics');
                $('#filterType').val('');
                $('#filterDateFrom').val('');
                $('#filterDateTo').val('');
                $('#filterPriceMin').val('');
                $('#filterPriceMax').val('');
                applyFilters();
            });

            // Apply filters when values change
            $('.filter-select, .filter-date, .filter-price').change(function() {
                applyFilters();
            });

            function applyFilters() {
                const categoryFilter = $('#filterCategory').val();
                const typeFilter = $('#filterType').val();
                const dateFromFilter = $('#filterDateFrom').val();
                const dateToFilter = $('#filterDateTo').val();
                const priceMinFilter = $('#filterPriceMin').val();
                const priceMaxFilter = $('#filterPriceMax').val();

                $('.diagnostic-card').each(function() {
                    let show = true;
                    const category = $(this).data('category');
                    const type = $(this).data('type');
                    const date = $(this).data('date');
                    const price = parseFloat($(this).data('price'));

                    // Category filter
                    if (categoryFilter && category !== categoryFilter) {
                        show = false;
                    }

                    // Type filter
                    if (typeFilter && type !== typeFilter) {
                        show = false;
                    }

                    // Date filter
                    if (dateFromFilter && date < dateFromFilter) {
                        show = false;
                    }
                    if (dateToFilter && date > dateToFilter) {
                        show = false;
                    }

                    // Price filter
                    if (priceMinFilter && price < parseFloat(priceMinFilter)) {
                        show = false;
                    }
                    if (priceMaxFilter && price > parseFloat(priceMaxFilter)) {
                        show = false;
                    }

                    if (show) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                updateResultsCount();
            }

            function updateResultsCount() {
                const visibleCount = $('.diagnostic-card:visible').length;
                const totalCount = $('.diagnostic-card').length;
                $('#filteredCount').text(visibleCount);

                if (visibleCount === 0 && totalCount > 0) {
                    $('#resultsCount').addClass('no-results');
                    $('#resultsCount').html('<span class="text-danger"><i class="fas fa-exclamation-circle me-1"></i>No records match your filters</span>');
                } else {
                    $('#resultsCount').removeClass('no-results');
                    $('#resultsCount').html(`Showing <span id="filteredCount">${visibleCount}</span> diagnostic records`);
                }
            }

            // Initialize filters
            updateResultsCount();
        });
    </script>

