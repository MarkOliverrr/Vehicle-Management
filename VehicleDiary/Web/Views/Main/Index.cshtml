                    @Localizer["FeaturesTitle"]
                </h2>
                <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
                    @Localizer["FeaturesSubtitle"]
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
                <!-- Feature 1 -->
                <div class="feature-card h-full p-8 rounded-3xl bg-white border border-border/50 shadow-soft transition-all duration-500 hover:shadow-elevated fade-in">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-all duration-300" style="background: hsla(160, 84%, 39%, 0.1);">
                        <i data-lucide="wrench" class="w-8 h-8" style="color: hsl(160, 84%, 39%);"></i>
                    </div>
                    <h3 class="text-xl font-bold text-foreground mb-3">@Localizer["FeatureMaintenanceTitle"]</h3>
                    <p class="text-muted-foreground mb-6 leading-relaxed">
                        @Localizer["FeatureMaintenanceDescription"]
                    </p>
                    <ul class="space-y-3">
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureMaintenanceItem1"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureMaintenanceItem2"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureMaintenanceItem3"]</span>
                        </li>
                    </ul>
                </div>

                <!-- Feature 2 -->
                <div class="feature-card h-full p-8 rounded-3xl bg-white border border-border/50 shadow-soft transition-all duration-500 hover:shadow-elevated fade-in">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-all duration-300" style="background: hsla(160, 84%, 39%, 0.1);">
                        <i data-lucide="fuel" class="w-8 h-8" style="color: hsl(160, 84%, 39%);"></i>
                    </div>
                    <h3 class="text-xl font-bold text-foreground mb-3">@Localizer["FeatureFuelTitle"]</h3>
                    <p class="text-muted-foreground mb-6 leading-relaxed">
                        @Localizer["FeatureFuelDescription"]
                    </p>
                    <ul class="space-y-3">
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureFuelItem1"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureFuelItem2"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureFuelItem3"]</span>
                        </li>
                    </ul>
                </div>

                <!-- Feature 3 -->
                <div class="feature-card h-full p-8 rounded-3xl bg-white border border-border/50 shadow-soft transition-all duration-500 hover:shadow-elevated fade-in">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-all duration-300" style="background: hsla(160, 84%, 39%, 0.1);">
                        <i data-lucide="pie-chart" class="w-8 h-8" style="color: hsl(160, 84%, 39%);"></i>
                    </div>
                    <h3 class="text-xl font-bold text-foreground mb-3">@Localizer["FeatureCostsTitle"]</h3>
                    <p class="text-muted-foreground mb-6 leading-relaxed">
                        @Localizer["FeatureCostsDescription"]
                    </p>
                    <ul class="space-y-3">
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureCostsItem1"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureCostsItem2"]</span>
                        </li>
                        <li class="flex items-center gap-3 text-sm">
                            <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: hsla(160, 84%, 39%, 0.1);">
                                <i data-lucide="check" class="w-3 h-3" style="color: hsl(160, 84%, 39%);"></i>
                            </span>
                            <span class="text-muted-foreground">@Localizer["FeatureCostsItem3"]</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
