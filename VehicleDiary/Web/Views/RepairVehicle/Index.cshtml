        }

        .repair-name {
            font-weight: 700;
            font-size: 1.25rem;
            color: #1e293b;
            margin-bottom: 1rem;
        }

        .repair-detail-item {
            display: flex;
            align-items: center;
            color: #475569;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

            .repair-detail-item i {
                color: #10b981;
                width: 20px;
            }

        .repair-file-download {
            display: flex;
            align-items: center;
