@using VehicleDiary.Web.ViewModels
@model DBUpgradeVehicleModelVM

@{
    var MaxUpgradeRecords = 25;
    var UpgradeRecordCount = Model.RepairViews.Count() < MaxUpgradeRecords;
}
<div class="container py-4">
    @if (UpgradeRecordCount)
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="upgrade-history-title">
                <i class="fas fa-history me-2"></i>Upgrades History
            </h2>
            <a asp-controller="UpgradeVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId" class="btn btn-primary btn-add-upgrade">
                <i class="fas fa-plus-circle me-2"></i>Add New Upgrade
            </a>
        </div>
    }
    else
    {
        <div class="alert-custom alert-limit mb-5">
            <div class="alert-icon">
                <i class="fas fa-info-circle"></i>
            </div>
            <div class="alert-content">
                <h4>Vehicle Upgrades Limit Reached</h4>
                <p>You have reached the maximum limit of 25 upgrades. Remove an upgrade to add a new one.</p>
            </div>
        </div>
    }

    <!-- Filter Section - Initially Closed -->
    <div class="filter-card mb-4">
        <div class="filter-header" id="filterToggle">
            <h3 class="filter-title">
                <i class="fas fa-filter me-2"></i>Filters
            </h3>
            <span class="filter-toggle-icon">
                <i class="fas fa-chevron-down"></i>
            </span>
        </div>
        <div class="filter-content" id="filterContent" style="display: none;">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select class="form-control filter-select" id="filterCategory">
                        <option value="">All Categories</option>
                        <option value="Vehicle Upgrades">Vehicle Upgrades</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Type</label>
                    <select class="form-control filter-select" id="filterType">
                        <option value="">All Types</option>
                        <!-- Options will be populated dynamically based on category -->
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <div class="input-group">
                        <input type="date" class="form-control filter-date" id="filterDateFrom" placeholder="From">
                        <input type="date" class="form-control filter-date" id="filterDateTo" placeholder="To">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Price Range</label>
                    <div class="d-flex align-items-center">
                        <input type="number" class="form-control filter-price" id="filterPriceMin" placeholder="Min" step="0.01">
                        <span class="mx-2">-</span>
                        <input type="number" class="form-control filter-price" id="filterPriceMax" placeholder="Max" step="0.01">
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-secondary" id="resetFilters">
                            <i class="fas fa-redo me-1"></i>Reset Filters
                        </button>
                        <button class="btn btn-primary" id="applyFilters">
                            <i class="fas fa-check me-1"></i>Apply Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="results-count mb-3" id="resultsCount">
        Showing <span id="filteredCount">@Model.RepairViews.Count()</span> of @Model.RepairViews.Count() upgrade records
    </div>

    @if (Model.RepairViews != null && Model.RepairViews.Any())
    {
        <div class="upgrade-cards-container" id="upgradeCardsContainer">
            @foreach (var upgrade in Model.RepairViews)
            {
                <div class="upgrade-card" id="upgrade-@upgrade.Id"
                     data-category="@upgrade.UpgradeVCategory"
                     data-type="@upgrade.UpgradeVType"
                     data-date="@upgrade.UpgradeVWhen.ToString("yyyy-MM-dd")"
                     data-price="@upgrade.UpgradeVPrice"
                     data-mileage="@upgrade.UpgradeVMileage">

                    <div class="upgrade-card-header">
                        <div class="upgrade-category-badge">
                            @upgrade.UpgradeVCategory
                        </div>
                        <span class="upgrade-date">@upgrade.UpgradeVWhen.ToString("d MMM yyyy")</span>
                    </div>

                    <div class="upgrade-card-body">
                        <div class="upgrade-type">
                            <i class="fas fa-cog me-2"></i>@upgrade.UpgradeVType
                        </div>

                        <h4 class="upgrade-name">@upgrade.UpgradeVName</h4>

                        <!-- Mileage -->
                        <div class="upgrade-detail-item">
                            <i class="fas fa-tachometer-alt me-2"></i>Mileage: @upgrade.UpgradeVMileage km
                        </div>

                        <!-- Status -->
                        @if (!string.IsNullOrEmpty(upgrade.UpgradeVStatus))
                        {
                            <div class="upgrade-detail-item">
                                <i class="fas fa-check-circle me-2"></i>Status: @upgrade.UpgradeVStatus
                            </div>
                        }

                        <!-- Part Brand -->
                        @if (!string.IsNullOrEmpty(upgrade.UpgradeVPartBrand))
                        {
                            <div class="upgrade-detail-item">
                                <i class="fas fa-industry me-2"></i>Part Brand: @upgrade.UpgradeVPartBrand
                            </div>
                        }

                        <!-- Part Code -->
                        @if (!string.IsNullOrEmpty(upgrade.UpgradeVPartCode))
                        {
                            <div class="upgrade-detail-item">
                                <i class="fas fa-barcode me-2"></i>Part Code: @upgrade.UpgradeVPartCode
                            </div>
                        }

                        <!-- Technician -->
                        @if (!string.IsNullOrEmpty(upgrade.UpgradeVTechnician))
                        {
                            <div class="upgrade-detail-item">
                                <i class="fas fa-user me-2"></i>Technician: @upgrade.UpgradeVTechnician
                            </div>
                        }

                        <!-- File Download -->
                        @if (!string.IsNullOrEmpty(upgrade.FileName))
                        {
                            <div class="upgrade-file-download">
                                <i class="fas fa-paperclip me-2"></i>
                                <a href="@Url.Action("Download", "UpgradeVehicle", new { id = upgrade.Id })" class="file-download-link" target="_blank">
                                    @upgrade.FileName
                                </a>
                            </div>
                        }

                        <!-- Notes -->
                        @if (!string.IsNullOrEmpty(upgrade.UpgradeVNotes))
                        {
                            <div class="upgrade-notes">
                                <i class="fas fa-sticky-note me-2"></i>@upgrade.UpgradeVNotes
                            </div>
                        }
                    </div>

                    <div class="upgrade-card-footer">
                        @if (upgrade.UpgradeVPrice > 0)
                        {
                            <div class="upgrade-price">
                                ₱@upgrade.UpgradeVPrice.ToString("N2")
                            </div>
                        }
                        else
                        {
                            <div class="upgrade-price no-price">
                                No Cost
                            </div>
                        }
                        <div class="upgrade-actions">
                            <button onclick="editUpgrade('@upgrade.Id')" class="btn-edit-upgrade" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button onclick="deleteUpgrade('@upgrade.Id')" class="btn-delete-upgrade" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-upgrades-card">
            <div class="no-upgrades-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <h3>No Upgrade Records</h3>
            <p>No upgrade records available for this vehicle.</p>
            @if (UpgradeRecordCount)
            {
                <a asp-controller="UpgradeVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId" class="btn btn-primary btn-add-first-upgrade">
                    <i class="fas fa-plus-circle me-2"></i>Add First Upgrade
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function deleteUpgrade(id) {
            if (confirm("Are you sure you want to delete this upgrade record?")) {
                $.ajax({
                    url: "@Url.Action("Delete", "UpgradeVehicle")/" + id,
                    type: "DELETE",
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        $("#upgrade-" + id).fadeOut(300, function() {
                            $(this).remove();
                            updateResultsCount();
                            // If no upgrades left, show the empty state
                            if ($(".upgrade-card").length === 0) {
                                location.reload();
                            }
                        });
                        showToast('Upgrade record deleted successfully', 'success');
                    },
                    error: function (err) {
                        console.error(err);
                        showToast('An error occurred while deleting the upgrade record', 'error');
                    }
                });
            }
        }

        // Edit upgrade record (redirect to edit page)
        function editUpgrade(id) {
            window.location.href = '@Url.Action("Edit", "UpgradeVehicle")/' + id;
        }

        // Filter functionality
        $(document).ready(function() {
            // Toggle filter section
            $('#filterToggle').click(function() {
                $('#filterContent').slideToggle(300);
                $('.filter-toggle-icon i').toggleClass('fa-chevron-down fa-chevron-up');
            });

            // Category and type relationship for upgrades
            const categoryTypes = {
                "Vehicle Upgrades": ["Retrofit", "Performance", "Style", "Interior", "Accessories", "Electronics", "Safety", "Comfort"],
            };

            $('#filterCategory').change(function() {
                const selectedCategory = $(this).val();
                const typeSelect = $('#filterType');
                typeSelect.html('<option value="">All Types</option>');

                if (selectedCategory && categoryTypes[selectedCategory]) {
                    categoryTypes[selectedCategory].forEach(type => {
                        typeSelect.append($('<option>', {
                            value: type,
                            text: type
                        }));
                    });
                }
            });

            // Apply filters
            $('#applyFilters').click(function() {
                applyFilters();
            });

            // Reset filters
            $('#resetFilters').click(function() {
                $('#filterCategory').val('Vehicle Upgrades');
                $('#filterType').val('');
                $('#filterDateFrom').val('');
                $('#filterDateTo').val('');
                $('#filterPriceMin').val('');
                $('#filterPriceMax').val('');
                applyFilters();
            });

            // Apply filters when values change
            $('.filter-select, .filter-date, .filter-price').change(function() {
                applyFilters();
            });

            function applyFilters() {
                const categoryFilter = $('#filterCategory').val();
                const typeFilter = $('#filterType').val();
                const dateFromFilter = $('#filterDateFrom').val();
                const dateToFilter = $('#filterDateTo').val();
                const priceMinFilter = $('#filterPriceMin').val();
                const priceMaxFilter = $('#filterPriceMax').val();

                $('.upgrade-card').each(function() {
                    let show = true;
                    const category = $(this).data('category');
                    const type = $(this).data('type');
                    const date = $(this).data('date');
                    const price = parseFloat($(this).data('price'));

                    // Category filter
                    if (categoryFilter && category !== categoryFilter) {
                        show = false;
                    }

                    // Type filter
                    if (typeFilter && type !== typeFilter) {
                        show = false;
                    }

                    // Date filter
                    if (dateFromFilter && date < dateFromFilter) {
                        show = false;
                    }
                    if (dateToFilter && date > dateToFilter) {
                        show = false;
                    }

                    // Price filter
                    if (priceMinFilter && price < parseFloat(priceMinFilter)) {
                        show = false;
                    }
                    if (priceMaxFilter && price > parseFloat(priceMaxFilter)) {
                        show = false;
                    }

                    if (show) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                updateResultsCount();
            }

            function updateResultsCount() {
                const visibleCount = $('.upgrade-card:visible').length;
                const totalCount = $('.upgrade-card').length;
                $('#filteredCount').text(visibleCount);

                if (visibleCount === 0 && totalCount > 0) {
                    $('#resultsCount').addClass('no-results');
                    $('#resultsCount').html('<span class="text-danger"><i class="fas fa-exclamation-circle me-1"></i>No records match your filters</span>');
                } else {
                    $('#resultsCount').removeClass('no-results');
                    $('#resultsCount').html(`Showing <span id="filteredCount">${visibleCount}</span> upgrade records`);
                }
            }

            // Initialize filters
            updateResultsCount();
        });
    </script>

    <style>
