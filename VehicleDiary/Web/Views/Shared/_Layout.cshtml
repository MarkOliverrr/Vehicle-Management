@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VehicleDiary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VehicleDiary.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body >
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom border-2 border-light py-3">
            <div class="container">
                <!-- Brand with modern typography -->
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Main" asp-action="Index">
                    <span class="align-middle main-color-txt">@Localizer["BrandName"]</span>
                </a>

                <!-- Responsive Toggler -->
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="mainNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Authenticated Menu -->
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark px-3 py-2 rounded-3"
                                   asp-controller="Vehicle"
                                   asp-action="Index">
                                    <i class="fas fa-car me-2"></i>@Localizer["MyGarage"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark px-3 py-2 rounded-3"
                                   asp-controller="AboutUs"
                                   asp-action="AboutUs">
                                    <i class="fas fa-info me-2"></i>@Localizer["AboutUs"]
                                </a>
                            </li>
                        </ul>

                 

                        <!-- User Info and Logout -->
                        <div class="d-flex align-items-center ms-auto">
                            <!-- User Welcome -->
                            <div class="user-welcome me-3 d-none d-md-block">
                                <span class="text-muted small">@Localizer["Hi"]</span>
                                <span class="fw-semibold text-dark">@User.Identity.Name</span>
                            </div>

                            <!-- User Avatar Dropdown -->
                            <div class="dropdown">
                                <button class="btn p-0 border-0" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <span class="d-md-none ms-2 text-dark">@User.Identity.Name</span>
                                    </div>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="userDropdown">
                                    <li class="dropdown-item-text d-md-none">
                                        <div class="fw-semibold">@User.Identity.Name</div>
                                        <div class="small text-muted">@Localizer["WelcomeBack"]</div>
                                    </li>
                                    <li><hr class="dropdown-divider d-md-none"></li>
                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-area="Identity"
                                           asp-page="/Account/Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i>@Localizer["SignOut"]
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark px-3 py-2 rounded-3"
                                   asp-controller="AboutUs"
                                   asp-action="AboutUs">
                                    <i class="fas fa-info me-2"></i>@Localizer["AboutUs"]
                                </a>
                            </li>
                        </ul>
                    

                        <!-- Guest Menu -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="btn fw-bold main-outline-colory px-4 mx-2"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">
                                    @Localizer["SignIn"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary px-4 shadow-sm"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    @Localizer["GetStarted"]
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.IsFooter == true)
    {
        <footer class="bg-light border-top text-muted" id="IDFooter">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        @Localizer["FooterCopyright"]<br>
                        <small>@Localizer["FooterTagline"]</small>
                    </div>
                </div>
            </div>
        </footer>
    }

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
